<!DOCTYPE html>
<html lang="en">

<head>
    <title>Add New Blog</title>
    <%- include('./partials/head') %>
</head>

<body>
    <%- include('./partials/nav') %>
    <div class="container mt-4">
        <form action="/blog" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="coverImage" class="form-label">Cover Image</label>
                <input type="file" class="form-control" id="coverImage" name="coverImage" aria-describedby="coverImage">
              </div>
            <div class="mb-3">
              <label for="title" class="form-label">Title</label>
              <input type="text" class="form-control" id="title" name="title" aria-describedby="title">
            </div>
            <div class="mb-3">
                <label for="body" class="form-label">Body</label>
                <textarea class="form-control" id="body" name="body" oninput="autoResize()"></textarea>
              </div>
              <div class="mb-3">
                <button class="btn btn-primary">Submit</button>
              </div>
            </form>
    </div>

    <%- include('./partials/script') %>

    <script>
      function autoResize() {
          const textarea = document.getElementById('body');
          textarea.style.height = 'auto'; // Reset height to auto
          textarea.style.height = textarea.scrollHeight + 'px'; // Set height to content's scroll height
      }
      autoResize(); // Call the function initially to adjust textarea height on page load
      </script>
</body>

</html>